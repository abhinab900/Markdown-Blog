<%- include('../header') %>
    <body class="bg-stone-800 text-white p-12 flex flex-col justify-center items-center">
        <div class="flex flex-col items-start max-w-[1400px]">
            <div class="flex flex-col justify-start ">
                <h1 class="text-2xl sm:text-4xl lg:text-6xl mb-2 break-all font-bold"><%=article.title%></h1>
                <div class="text-gray-500 text-2xl mb-2 "><%=article.createdAt.toLocaleDateString()%></div>
            </div>
            
            <div class="mt-4">
                <button class="h-12 px-6 rounded-lg m-2 bg-gray-500"><a href="/" class="w-full h-full">All Articles</a></button>
                <button class="h-12 px-6 rounded-lg m-2 bg-blue-500"><a href="/articles/edit/<%=article.id%>" class="w-full h-full">Edit</a></button>
            </div>
            
            <div class="mt-8 w-full">
                <h1 class="font-bold">Description</h1>
                <p class="break-all border-white rounded-xl border-2 p-8 mt-4 w-full"><%=article.description%></p>
            </div>

            <div class="mt-8 w-full">
                <h1 class="font-bold">Markdown</h1>
                <div class="break-all border-white rounded-xl border-2 p-8 mt-4 w-full"><%-article.sanitizedHtml%></div>
            </div>
        </div>
    
<%- include('../footer') %>